.dash-card.admin-section
  .dash-card-header
    h3 Gesti√≥n de Empleados
    a.btn-view-all(href="#", onclick="openEmployeeModal(); return false;") ‚ûï Nuevo Empleado
  .dash-card-body
    if empleados && empleados.length > 0
      ul.employee-list
        each e in empleados
          li.employee-item
            .employee-info
              .employee-details
                span.emp-name= e.nombre + " " + (e.apellido || "")
                span.emp-email= e.email
              span.emp-role(
                class=e.rol === "administrador" ? "role-admin" : "role-employee"
              )= e.rol
            .emp-actions
              a.btn-edit(
                href="#",
                onclick="openEditEmployeeModal('" + e._id + "', '" + e.nombre + "', '" + (e.apellido || "") + "', '" + e.email + "', '" + e.rol + "'); return false;"
              ) ‚úèÔ∏è
              form(
                action="/employee/" + e._id + "?_method=DELETE",
                method="POST",
                style="display: inline"
              )
                button.btn-delete(
                  type="submit",
                  onclick="return confirm('¬øEliminar empleado?')"
                ) üóëÔ∏è
    else
      p.text-muted No hay empleados registrados.
