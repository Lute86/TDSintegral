html
  head
    title Editar empleado
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h2.text-primary Editar empleado
      form(action="/dashboard/employee/" + employee._id method="POST")
        input(type="hidden" name="_method" value="PUT")
        .mb-3
          label(for="nombre") Nombre completo
          input.form-control(type="text" name="nombre" value=employee.nombre required)
        .mb-3
          label(for="email") Email
          input.form-control(type="email" name="email" value=employee.email required)
        button.btn.btn-primary(type="submit") Actualizar
        a.btn.btn-secondary.ms-2(href="/dashboard") Cancelar