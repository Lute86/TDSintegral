      }
      
      .login-modal .login-options a {
        color: var(--color-primario);
        text-decoration: none;
      }
      .login-modal .login-options a:hover {
        text-decoration: underline;
      }
      /* --- FIN DE ESTILOS DEL MODAL --- */

